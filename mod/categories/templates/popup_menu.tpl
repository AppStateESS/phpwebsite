<div class="box">
    <div class="box-title">
        <h2>{CAT_TITLE}: {ITEM_TITLE}</h2>
    </div>
    <div class="box-content">{START_FORM}
        <table width="100%" cellpadding="4">
            <tr>
                <th width="50%">{AVAILABLE}</th>
                <th width="50%">{CURRENT}</th>
            </tr>
            <tr>
                <td>{ADD_CATEGORY}<br />
                    {ADD}</td>
                <td>{REMOVE_CATEGORY}<br />
                    {REMOVE}</td>
            </tr>
        </table>
        <div class="padded">{QUICK_PARENT}{CATEGORY_NAME} {QUICK_ADD}</div>
        <div class="padded align-center">{CLOSE}</div>
        {END_FORM} {CANCEL}
    </div>
</div>
